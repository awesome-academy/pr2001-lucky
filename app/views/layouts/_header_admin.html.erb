<div class="container-fluid">
    <div class="row">
      <div class="col-md-9">
        <nav class="navbar navbar-expand-sm">
          <%= link_to admin_categories_path, class:"navbar-brand" do %>
            <i class='fas fa-hamburger' style='font-size:48px;color:#ff8e02cf'></i>
          <% end %>
          <% if logged_in_admin? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to  "Home", admin_categories_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "Contact","#", class:"nav-link"%>
              </li>
              <li class="nav-item dropdown">
                <%= link_to "Dashboard","#", class:"nav-link dropbtn"%>
                <div class="dropdown-content">
                  <%= link_to admin_categories_path do%>
                    <i class='far fa-file-alt' style="color: #e65805cf;"></i>Category
                  <% end %>
                   <%= link_to admin_products_path do%>
                    <i class='fas fa-hotdog' style="color: #e65805cf;"></i>Product
                  <% end %>
                </div>
              </li>
            </ul>
          </nav>
        </div>
        <div class="col-md-3">
          <div class="notification">
            <div class="dropdown">
              <%= link_to "#", class:"dropbtn" do %>
                <i class='fas fa-user-circle' style='font-size:24px;color:#ff8e02cf'></i>
              <% end %>
              <div class="dropdown-content">
                <%= link_to "Profile","#"%>
                <%= link_to "Setting","#" %>
                <%= link_to "Log out",admin_logout_path, method: :delete%>
                <% else %>
                <%= link_to "Login",admin_login_path %>
                <% end %>  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>