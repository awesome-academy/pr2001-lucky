

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-9">
        <nav class="navbar navbar-expand-sm">
            <i class='fas fa-hamburger' style='font-size:48px;color:#ff8e02cf'></i>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to  "Home", root_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "Contact","#", class:"nav-link"%>
                <li class="nav-item">
                <%= link_to "Profile",users_new_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                <%= link_to "Update",edit_user_path(current_user),method: :get, class:"nav-link" %>
                </li>
              </li>
            </ul>
          </nav>
        </div>
        <div class="col-md-3">
          <div class="notification">
            <li class="dropdown">
              <%= link_to "#", class:"dropdown-toggle" do %>
                <i class='fas fa-user-circle' style='font-size:24px;color:#ff8e02cf'></i>
              <% end %>
              <ul class="dropdown-menu">
                <% if logged_in? %>
                  <li><%= link_to "Setting","#" %></li>
                  <li><%= link_to "Log out",myfood_logout_url , method: :delete%></li>
                <% else %>
                  <li><%= link_to "Login",user_login_path %></li>
                <% end %>  
              </ul>
            </li>
          </div>
        </div>
      </div>
    </div>
  </div>
