<div class="col-md-3 col-sm-3 col-6">
  <div class="product<%=product.id%>">
    <%= link_to product_path(product) do%>
      <%= image_tag product.images.first.url_url, class: "list-product" if product.images.first %>
    <% end %>  
  </div>
  <div class="buying">
    <span><%= product.name_product %></span>
    <h6>$<%= product.price %></h6>
    <%= button_to "#", class:"btn btn-success" do%>
      <i class='fas fa-cart-plus'></i> Add Cart
    <% end %>
  </div>
</div>