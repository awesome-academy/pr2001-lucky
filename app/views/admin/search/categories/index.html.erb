<div class="container">
    <h2>CATEGORIES</h2>
    <%=link_to "Create new caregory", new_admin_category_path, class: "btn btn-origin"%>
	<%= form_tag admin_search_categories_path, method: :get , class: "form-inline" do %>
		<div>
			<%= text_field_tag :name_category, params[:name_category], class:'form-control mr-sm-2',placeholder: 'Looking for category' %>
			<%= submit_tag "Search", class: 'btn btn-origin' %>
		</div>
	<% end %>
		<table id="products">
			<tr>
				<th>Name</th>
				<th>Action</th>
			</tr>
      <% @categories.each do |category| %>
      	<%= render 'category' , category: category  %>
      <% end %>
	  </table>
</div>